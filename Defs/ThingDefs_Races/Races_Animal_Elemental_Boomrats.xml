<Defs>

<!-- Core Boomrat Base/Kind is now xpathed to also be parent object for the other Elemental Rats-->

<!-- ============Foamrat============= -->

  <ThingDef ParentName="AnimalThingBaseErat">
    <defName>Foamrat</defName>
    <label>foamrat</label>
    <description>Engineered for chemicals production, the foamarat grows a large sac of sticky chemicals in its hump. Though it is weak and fragile for its size, other animals have learned to avoid it because of the huge mess it leaves when it dies.</description>
    <race>
	  <deathActionWorkerClass>Elemental_Boomalopes.DeathActionWorker_SmallExplosion_FireFoam</deathActionWorkerClass>
    </race>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBaseErat">
    <defName>Foamrat</defName>
    <label>foamrat</label>
    <race>Foamrat</race>
    <lifeStages Inherit="False">
      <li>
        <label>foamrat calf</label>
        <labelPlural>foamrat calves</labelPlural>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomrats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>0.80</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomarat</texPath>
          <drawSize>0.80</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>1.0</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomrat</texPath>
          <drawSize>1.0</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/Animal/Elemental Boomrats/Baserat</texPath>
          <color>(255,92,86)</color>
          <drawSize>1.15</drawSize>
          <shaderType>CutoutComplex</shaderType>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Things/Pawn/Animal/Boomrat/Dessicated_Boomrat</texPath>
          <drawSize>1.15</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>
